<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.lunding.deliciousclock" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
        </activity>
        <activity
            android:name=".login.WelcomeActivity"
            android:label="@string/title_activity_register" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.MealSelectionActivity"
            android:label="@string/meal_selection_activity_title"
            android:parentActivityName=".login.WelcomeActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.WelcomeActivity"/>
        </activity>
        <activity
            android:name=".login.TimeSelectionActivity"
            android:label="@string/time_selection_activity_title"
            android:parentActivityName=".login.MealSelectionActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.MealSelectionActivity"/>
        </activity>
        <activity
            android:name=".login.AddressSelectionActivity"
            android:label="@string/address_selection_activity_title"
            android:parentActivityName=".login.TimeSelectionActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.TimeSelectionActivity"/>
        </activity>
        <activity
            android:name=".login.OverviewSelectionActivity"
            android:label="@string/overview_selection_activity_title"
            android:parentActivityName=".login.AddressSelectionActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.AddressSelectionActivity"/>
        </activity>
    </application>

</manifest>
