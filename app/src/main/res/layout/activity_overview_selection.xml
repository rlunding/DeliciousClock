<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="org.lunding.deliciousclock.login.MealSelectionActivity">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"/>
    <!-- android:name="com.google.android.gms.maps.MapFragment"-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/address_selection_address"
            android:hint="Address">
            <requestFocus android:layout_width="wrap_content" />
        </EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textAutoComplete"
            android:ems="10"
            android:id="@+id/address_selection_city"
            android:hint="City" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textAutoComplete"
            android:ems="10"
            android:id="@+id/address_selection_state"
            android:hint="State" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/address_selection_zipcode"
            android:hint="Zip code" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal|bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Continue"
            android:id="@+id/address_selection_continue_button"
            android:enabled="false" />
    </FrameLayout>
</LinearLayout>
