<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    tools:context="org.lunding.deliciousclock.login.MealSelectionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I want my breakfast at..."
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="7"/>

    <Button
        android:id="@+id/time_selection_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.10 am"
        android:layout_marginTop="100dp"
        android:layout_weight="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="... so please wake me up"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_weight="7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 min"
        android:id="@+id/time_selection_offset_button"
        android:layout_marginTop="200dp"
        android:layout_weight="7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="earlier"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:layout_weight="7"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_horizontal|bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sounds good!"
            android:id="@+id/time_selection_continue_button"
            android:background="@color/continue_button_background_color"
            android:textColor="@color/continue_button_text_color"/>
    </FrameLayout>


</LinearLayout>
